<!-- views/listings/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Listing</title>
</head>
<body>
  <h1>Edit Listing</h1>
  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    
    <label for="street-address">Street Address:</label>
    <input type="text" name="streetAddress" id="street-address" value="<%= listing.streetAddress %>" required />
    
    <label for="city">City:</label>
    <input type="text" name="city" id="city" value="<%= listing.city %>" required />

    <label for="price">Price:</label>
    <input type="number" name="price" id="price" min="0" value="<%= listing.price %>" required />
    
    <label for="size">Size:</label>
    <input type="number" name="size" id="size" min="0" value="<%= listing.size %>" required />

    
    <button type="submit">Update Listing</button>
  </form>
</body>
</html>

