<!-- views/listings/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Listing</title>
</head>
<body>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  <h1>Edit Listing</h1>
  <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" value="<%= listing.title %>" required />
    
    <label for="description">Description:</label>
    <textarea name="description" id="description" required><%= listing.description %></textarea>
    
    <label for="price">Price:</label>
    <input type="number" name="price" id="price" value="<%= listing.price %>" required />
    
    
    <button type="submit">Update Listing</button>
  </form>
</body>
</html>

